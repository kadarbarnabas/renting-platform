@page "/cars/edit/{Id:guid}"
@using RentingPlatform.Shared
@inject NavigationManager NavigationManager
@inject HttpClient Http

<h2>Autó módosítása</h2>
<hr/>

<form @onsubmit="HandleSubmit">
    <div>
        <label>Brand:</label>
        <input type="text" @bind="Car.Brand" />
    </div>
    <div>
        <label>Model:</label>
        <input type="text" @bind="Car.Model" />
    </div>
    <div>
        <label>Image (Base64):</label>
        <textarea @bind="Car.Image"></textarea>
    </div>
    <button type="submit">Save</button>
    <button type="button" @onclick="Cancel">Cancel</button>
</form>

@code {
    [Parameter] public Guid Id { get; set; }
    private Car Car { get; set; } = new Car();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Car = await Http.GetFromJsonAsync<Car>($"/cars/{Id}");
            if (Car == null)
            {
                Console.WriteLine("Car not found");
                NavigationManager.NavigateTo("/cars");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching car data: {ex.Message}");
            NavigationManager.NavigateTo("/cars");
        }
    }

    private async Task HandleSubmit()
    {
        var response = await Http.PutAsJsonAsync($"/cars/{Id}", Car);
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/cars");
        }
        else
        {
            Console.WriteLine("Error updating car");
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/cars");
    }
}
