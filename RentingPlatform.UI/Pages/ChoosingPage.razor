@page "/home"
@inject NavigationManager NavigationManager

<div class="dashboard-container text-center" style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <h2 class="dashboard-title mb-4" style="font-size: 2rem; font-weight: bold; color: #333;">Dashboard</h2>

    <div class="dashboard-grid" style="display: grid; grid-template-columns: repeat(6, 1fr); gap: 20px; justify-items: center; align-items: center; margin-top: 20px;">
        <div></div>
        <div></div> 
        <button class="btn-custom" @onclick="NavigateToAdmin" style="background: linear-gradient(to bottom, #0d6efd, #6610f2); color: white; font-size: 1.2rem; width: 250px; height: 250px; border-radius: 15px; display: flex; justify-content: center; align-items: center; text-align: center; font-weight: bold; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
            Admin
        </button>
        <button class="btn-custom" @onclick="NavigateToProfile" style="background: linear-gradient(to bottom, #0d6efd, #6610f2); color: white; font-size: 1.2rem; width: 250px; height: 250px; border-radius: 15px; display: flex; justify-content: center; align-items: center; text-align: center; font-weight: bold; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
            Profile
        </button>
        <div></div>
        <div></div>
    </div>

    <div class="dashboard-grid" style="display: grid; grid-template-columns: repeat(6, 1fr); gap: 20px; justify-items: center; align-items: center; margin-top: 20px;">
        <div></div> 
        <div></div> 
        <button class="btn-custom" @onclick="NavigateToCars" style="background: linear-gradient(to bottom, #0d6efd, #6610f2); color: white; font-size: 1.2rem; width: 250px; height: 250px; border-radius: 15px; display: flex; justify-content: center; align-items: center; text-align: center; font-weight: bold; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
            Cars
        </button>
        <button class="btn-custom" @onclick="NavigateToAirbnb" style="background: linear-gradient(to bottom, #0d6efd, #6610f2); color: white; font-size: 1.2rem; width: 250px; height: 250px; border-radius: 15px; display: flex; justify-content: center; align-items: center; text-align: center; font-weight: bold; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
            AirBNB
        </button>
        <div></div> 
        <div></div>
    </div>
</div>

@code {
    private void NavigateToAdmin()
    {
        NavigationManager.NavigateTo("/admin");
    }

    private void NavigateToProfile()
    {
        NavigationManager.NavigateTo("/profile");
    }

    private void NavigateToCars()
    {
        NavigationManager.NavigateTo("/cars");
    }

    private void NavigateToAirbnb()
    {
        NavigationManager.NavigateTo("/airbnb");
    }
}
